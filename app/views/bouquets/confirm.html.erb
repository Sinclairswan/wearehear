<%= cloudinary_js_config %>
<article class="pa3 pa5-ns " data-name="slab-stat">
<h1 class="f1">bouquet details</h1>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">From</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.sender_name %></dd>
  </dl>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">To</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.receiver_name %></dd>
  </dl>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">Location</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.custom_location %></dd>
  </dl>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">Song</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.song.track %></dd>
  </dl>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">Artist</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.song.artist %></dd>
  </dl>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">Album</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.song.album %></dd>
  </dl>
  <dl class="dib mr5">
    <dd class="f6 f5-ns b ml0">Message</dd>
    <dd class="f3 f2-ns b ml0"><%= @bouquet.comment %></dd>
  </dl>
</article>
  <%= render 'text_form' %>
<article class="cf">
<div id="show-map-container" class="fl tc">
  <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @location.lat %>,<%= @location.lng %>&zoom=16&size=600x400&markers=color:green%7C<%= @location.lat %>,<%= @location.lng %>&key=AIzaSyDDo2l9bHOpF6W1lxwIdI0njMBESuZEhzk" id="show-map">
</div>
<div class="fl tc">
  <%= cl_image_tag(@bouquet.image.file.public_id) %>
  <h2>Ready to send your Bouquet?</h2>
</div>
</article>
