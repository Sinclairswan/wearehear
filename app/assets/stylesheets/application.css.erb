body {
  background-color: #FFFFFF;
  font-family: 'Open Sans', sans-serif;
}

body {
  background-image: url('<%= asset_path("music-sound-audio-recording.png") %>');
  background-repeat: no-repeat;
  background-attachment: fixed;
  color: white;
}

h1 {
  text-align: center;
}

div#person {
  border: 1px solid black;
  padding: 20px;
  margin-top: 10px;

  min-width: 1000px;
}

#map {
  width: 900px;
  height: 600px;
  background-color: grey;
  margin: auto;
  border: 10px solid white;
  border-radius: 15px;
  position: fixed;

}
button{
  background-color: none;
  border:none;
}

div#results{
  /*float:right;*/
}




input {
    background-color: transparent;
    border-radius: 2px;
    cursor: pointer;
    display: block;
    height: 40px;
    width: 250px;
    transition: all .3s;
    border: 2px solid #1DB954;
    font-size: 1em;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-top: 0;
    margin-bottom: 20px;
    color: #1DB954;
    overflow: hidden;
    font-family: 'Open Sans', sans-serif;
}
.container{
  margin-bottom: 0px;
}

.scroll-container {
  width: 160px;
  height: auto;
  overflow-y: auto;
  overflow-x: hidden;
  transform: rotate(-90deg);
  transform-origin: right top;
}

.artist-container, .track-container{
/*  display: inline-block;
  float: left;*/

  transform: rotate(90deg);
  transform-origin: right top;

}


